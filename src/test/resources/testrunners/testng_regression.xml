<suite name="Opencart Application Test Regression Suite" verbose="4"
	thread-count="5" parallel="tests">

	<listeners>
		<listener
			class-name="com.aventstack.chaintest.plugins.ChainTestListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />

		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>


	<test name="Login Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Search Page Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.tests.SearchProductTest" />
		</classes>
	</test>

	<test name="ProductInfo Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoTest" />
		</classes>
	</test>

	<test name="Register Page Test">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.tests.RegisterPageTest" />
		</classes>
	</test>


</suite>	

